{% extends 'base.twig' %}

{% block title %}Réservation - {{ annonce.title }}{% endblock %}

{% block content %}
<div class="max-w-6xl mx-auto mt-10 grid grid-cols-1 md:grid-cols-2 gap-8">
    
    <!-- Partie Gauche : Image et Détails -->
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <img src="{{ annonce.photo }}" alt="{{ annonce.title }}" class="w-full h-96 object-cover">
        
        <div class="p-6">
            <h1 class="text-3xl font-bold text-gray-900">{{ annonce.title }}</h1>
            <p class="text-gray-600 mt-2">{{ annonce.description }}</p>

            <div class="flex items-center justify-between mt-4">
                <span class="text-2xl font-semibold text-green-600">{{ annonce.prix }} € / nuit</span>
                <span class="text-sm text-gray-500">Catégorie : {{ annonce.categorie }}</span>
            </div>
        </div>
    </div>

    <!-- Partie Droite : Formulaire de réservation -->
    <div class="bg-white shadow-md rounded-lg p-6 flex flex-col justify-between">
        <div>
            <h2 class="text-2xl font-semibold text-gray-800 mb-4">Réserver ce logement</h2>

            <form action="/paiement/{{ annonce.id }}" method="POST" class="space-y-4">
                <div>
                    <label for="datedebut" class="block text-gray-700 font-medium">Date d'arrivée</label>
                    <input type="date" id="datedebut" name="datedebut" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-400">
                </div>

                <div>
                    <label for="datefin" class="block text-gray-700 font-medium">Date de départ</label>
                    <input type="date" id="datefin" name="datefin" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-400">
                </div>

                <div class="mt-4 border-t pt-4">
                    <p class="text-lg font-semibold">Prix total : <span class="text-green-600">{{ annonce.prix }} €</span></p>
                </div>

                <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded-lg text-lg font-semibold hover:bg-blue-700 transition duration-200">
                    Confirmer la réservation
                </button>
            </form>
        </div>
    </div>

</div>
{% endblock %}
