<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Réserver votre séjour</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <script src="https://www.paypal.com/sdk/js?client-id=YOUR_CLIENT_ID"></script>
  <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body class="min-h-screen bg-gray-50 py-12">
<header class="sticky top-0 bg-white shadow-sm z-50">
    <div class="container mx-auto px-4 py-4">
      <div class="flex items-center justify-between">

        <a href="/" class="flex items-center space-x-2">
          <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/69/Airbnb_Logo_B%C3%A9lo.svg/800px-Airbnb_Logo_B%C3%A9lo.svg.png" alt="Logo Airbnb" class="h-8">
        </a>

     
      </div>
    </div>
  </header>



  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto bg-white rounded-2xl shadow-lg overflow-hidden">
      <div class="p-8">
        <h2 class="text-2xl font-bold mb-6">{% block title %}Réservation - {{ annonce.title }}{% endblock %}</h2>
        
        <!-- Informations du logement -->
        <div class="mb-8">
          <img 
            src="{{annonce.photo}}" 
            alt="Logement"
            class="rounded-lg w-full h-64 object-cover"
          />
          <div class="mt-4">
            <h3 class="text-xl font-semibold">{{ annonce.title }}</h3>
            <p class="text-gray-600">{{ annonce.ville }}</p>
          </div>
        </div>

        <!-- Formulaire de réservation -->
        <div class="space-y-6">
          <form action="/reserver" method="POST" id="reservation-form">
          <input type="hidden" name="annonce_id" value="{{ annonce.id }}">
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  Date d'arrivée
                </label>
                <div class="relative">
                  <input
                    type="date"
                    name="datedebut"
                    id ="start_date"
                    class="w-full pl-10 pr-4 py-2 border rounded-lg focus:ring-2 focus:ring-rose-500"
                  />
                  <div class="absolute left-3 top-2.5 h-5 w-5 text-gray-400">
                    <i data-lucide="calendar"></i>
                  </div>
                </div>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  Date de départ
                </label>
                <div class="relative">
                  <input
                    type="date"
                    name="datefin"
                    id="end_date"
                    class="w-full pl-10 pr-4 py-2 border rounded-lg focus:ring-2 focus:ring-rose-500"
                  />
                  <div class="absolute left-3 top-2.5 h-5 w-5 text-gray-400">
                    <i data-lucide="calendar"></i>
                  </div>
                </div>
              </div>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Nombre de voyageurs
              </label>
              <div class="relative">
                <select
                  name="nbVoyageurs"
                  id = 'NombredEvoyageur'
                  class="w-full pl-10 pr-4 py-2 border rounded-lg focus:ring-2 focus:ring-rose-500"
                >  
                                 
                    <option value="">--Nombre de voyageurs -</option>
                    <option value="1">1 voyageur</option>
                    <option value="2">2 voyageurs</option>
                    <option value="3">3 voyageurs</option>
                    <option value="4">4 voyageurs</option>
                    <option value="5">5 voyageurs</option>
                    <option value="6">6 voyageurs</option>
                  
                </select>
                <div class="absolute left-3 top-2.5 h-5 w-5 text-gray-400">
                  <i data-lucide="users"></i>
                </div>
              </div>
            </div>
      

          <!-- Résumé du prix -->
          <div class="bg-gray-50 p-6 rounded-lg">
            <h4 class="font-semibold mb-4">Résumé du prix</h4>
            <div class="space-y-2">
              <div class="flex justify-between">
                <span id= "prix" >{{ annonce.prix  }} MAD x <span id="nb_nuits">0</span> nuits</span>
                <span id="prix_total_nuits">0</span>
                
              </div>
              <div class="flex justify-between font-bold pt-2 border-t">
                <span>Total</span>
                <span id="prix_total">0</span>
                <input type="hidden" id='PrixHidden' name="PrixTotalF" >
              </div>
            </div>
          </div>

          <!-- Bouton PayPal -->
          <div id="paypal-button-container" class="mt-6">
           <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded">Payer</button>
          </div> 
      </form>
        </div>
      </div>
    </div>
  </div>
    <script>
    
  const dateArrivee = document.getElementById("start_date");
  const dateDepart = document.getElementById("end_date");
  const nbNuits = document.getElementById("nb_nuits");
  const prix_total_nuits = document.getElementById("prix_total_nuits");
  const prix = document.getElementById("prix");
   const prix_total = document.getElementById("prix_total");
  const NombredEvoyageur = document.getElementById("NombredEvoyageur");
  const prixh = document.getElementById("PrixHidden");
  
  function calculerNuits() {
    const arrivee = new Date(dateArrivee.value);
    const depart = new Date(dateDepart.value);

    if (arrivee && depart && arrivee < depart) {
      const diffTime = depart - arrivee;
      const diffDays = diffTime / (1000 * 60 * 60 * 24); 
      nbNuits.textContent = diffDays;
      prix_total_nuits.textContent = diffDays * parseInt(prix.textContent)
    } else {
      nbNuits.textContent = 0;
    }
  }



    dateArrivee.addEventListener("change", calculerNuits);
    dateDepart.addEventListener("change", calculerNuits);
    NombredEvoyageur.addEventListener("change", ()=>{
        prix_total.textContent = NombredEvoyageur.value * prix_total_nuits.textContent  ;
        prix.value = prix_total.textContent ;
    });
    </script>
</body>
</html>
